            <div class="col-md-6 mt-5">
                <form action="/somewherespecial">
                    <div class="col text-center mb-5">
                        <h1>Make a Donation</h1>
                    </div>
                    <div class="col text-center mb-3">
                        <input type="radio" class="btn-check" name="options" id="oneTime" autocomplete="off" checked>
                        <label class="btn btn-outline-primary" for="oneTime">one time</label>
                        <input type="radio" class="btn-check" name="options" id="monthly" autocomplete="off">
                        <label class="btn btn-outline-primary" for="monthly">monthly</label>
                    </div>

                    <div class="col text-center">
                        <label class="mb-2" for="amtDonate">
                            <h2>donate this amount:</h2>
                        </label>
                        <div class="input-group mb-3 w-25 mx-auto">
                            <span class="input-group-text">$</span>
                            <input id="amtDonate" type="text" class="form-control"
                                aria-label="Amount (to the nearest dollar)" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control mb-3" id="fullName"
                                placeholder="what should we call you?" required>
                        </div>
                        <div class="col-12">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control mb-3" id="email" placeholder="youremail@example.com"
                                required>
                        </div>



                        <div class="col-4">
                            <label for="cardNum" class="form-label">Card Number</label>
                            <input type="text" class="form-control mb-3" id="cardNum" placeholder="16 digit card number"
                                required>
                        </div>
                        <div class="col-4">
                            <label for="expDate" class="form-label">Expiration Date</label>
                            <input type="text" class="form-control mb-3" id="expDate" placeholder="MM/YY" required>
                        </div>
                        <div class="col-4">
                            <label for="ccv" class="form-label">CCV</label>
                            <input type="text" class="form-control mb-3" id="ccv" placeholder="CCV" required>
                        </div>
                        <div class="col mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="emailCheck" checked>
                                <label class="form-check-label w-auto" for="emailCheck">
                                    Yes, I would like to receive infrequent email updates about the Foxwood Family
                                    project
                                    and insider travel information!
                                </label>
                            </div>
                        </div>



                    </div>
                    <div class="col text-center mb-3">
                        <button type="submit" class="btn btn-lg btn-primary">donate</button>
                    </div>
                    <div class="col text-center mb-3">
                        <a class="nav-link active" href="#"><img src="/images/logos_paypal.svg" alt="paypal logo"><span
                                class="text-decoration-underline">Donate with PayPal</span></a>
                    </div>
                </form>
            </div>
        </div>
    </div>







